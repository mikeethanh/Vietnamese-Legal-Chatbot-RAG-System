# Environment variables for Vietnamese Legal LLM
# Copy this file to .env and fill in your values

# =============================================================================
# MODEL CONFIGURATION
# =============================================================================
MODEL_PATH=/app/model
MODEL_NAME=latest                    # or specific model name like 'vietnamese-legal-llama-20241103_142000'
MAX_SEQ_LENGTH=2048
BATCH_SIZE=2
TEMPERATURE=0.7
TOP_P=0.9
MAX_TOKENS=512

# =============================================================================
# SERVER CONFIGURATION  
# =============================================================================
HOST=0.0.0.0
PORT=8000
WORKERS=1
LOG_LEVEL=INFO

# =============================================================================
# GPU CONFIGURATION
# =============================================================================
CUDA_VISIBLE_DEVICES=0
TORCH_DTYPE=bfloat16
LOAD_IN_4BIT=true

# =============================================================================
# WEIGHTS & BIASES (Optional - for training monitoring)
# =============================================================================
# Get your API key from: https://wandb.ai/settings
WANDB_API_KEY=your_wandb_api_key_here
WANDB_PROJECT=vietnamese-legal-llm
WANDB_ENTITY=your_wandb_username

# =============================================================================
# OPENAI API (Optional - for LLM-based evaluation)
# =============================================================================
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini

# =============================================================================
# HUGGING FACE (Optional - for model downloading)
# =============================================================================
# Get your token from: https://huggingface.co/settings/tokens
HF_TOKEN=your_huggingface_token_here

# =============================================================================
# DIGITAL OCEAN SPACES (Required for data and model storage)
# =============================================================================
# Create Spaces key from: https://cloud.digitalocean.com/spaces
DO_SPACES_KEY=your_do_spaces_key_here
DO_SPACES_SECRET=your_do_spaces_secret_here
DO_SPACES_ENDPOINT=https://sgp1.digitaloceanspaces.com
DO_SPACES_BUCKET=legal-datalake

# =============================================================================
# TRAINING CONFIGURATION
# =============================================================================
LEARNING_RATE=2e-4
NUM_EPOCHS=3
WARMUP_STEPS=10
GRADIENT_ACCUMULATION_STEPS=4
LORA_R=16
LORA_ALPHA=32
LORA_DROPOUT=0.05

# =============================================================================
# DATA PATHS
# =============================================================================
TRAIN_DATA_PATH=/app/data/train.jsonl
VAL_DATA_PATH=/app/data/val.jsonl
TEST_DATA_PATH=/app/data/test.jsonl
OUTPUT_DIR=/app/outputs

# =============================================================================
# EVALUATION CONFIGURATION
# =============================================================================
COMPUTE_ROUGE=true
COMPUTE_BLEU=true
COMPUTE_PERPLEXITY=true
COMPUTE_LLM_EVAL=true

# =============================================================================
# SECURITY (Production only)
# =============================================================================
# API_KEY=your_api_key_for_authentication
# CORS_ORIGINS=["https://yourdomain.com"]
# HTTPS_CERT_PATH=/app/ssl/cert.pem
# HTTPS_KEY_PATH=/app/ssl/key.pem