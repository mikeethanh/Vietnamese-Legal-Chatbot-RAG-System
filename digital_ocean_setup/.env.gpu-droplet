# DigitalOcean GPU Droplet Configuration
# Optimized for H100/H200 GPU training

# Model Configuration
BASE_MODEL=BAAI/bge-m3
MODEL_OUTPUT_DIR=./vietnamese-legal-bge-m3

# Training Parameters - Memory Optimized for GPU Droplet
EPOCHS=3
GPU_BATCH_SIZE=2
GRADIENT_ACCUMULATION_STEPS=8
MAX_SEQ_LENGTH=128
MAX_SAMPLES=50000

# Memory Optimization
USE_FP16=true
GRADIENT_CHECKPOINTING=true
DATALOADER_NUM_WORKERS=4

# Digital Ocean Spaces (S3-compatible)
SPACES_KEY=your_spaces_access_key
SPACES_SECRET=your_spaces_secret_key
SPACES_ENDPOINT=https://nyc3.digitaloceanspaces.com
SPACES_REGION=nyc3
SPACES_BUCKET=your-bucket-name

# GPU Optimization
CUDA_VISIBLE_DEVICES=0
PYTORCH_CUDA_ALLOC_CONF=expandable_segments:True,max_split_size_mb:128

# Logging
LOG_LEVEL=INFO
WANDB_DISABLED=true

# Droplet specific
ALLOW_REMOTE_ACCESS=true
JUPYTER_PORT=8888
API_PORT=5000